.section--update
	width:100%
	height:100%
	background: url('../img/bg.jpg') no-repeat

.section--update__container
	background: #fff
	height: 500px
	transform: translate3d(-300px, -250px, 0)


@keyframes movetoleft
	from {
		left:50%
	}
	to {
		left:20%
	}
@keyframes movetoresault
	from {
		left:50%
	}
	to {
		left:60%
	}

.moveleft 
	animation: movetoleft 1s ease
	left:20%
	// transform:translate3d(-660px,-150px,0)

.resaultmove
	display:block
	animation: movetoresault 1s ease
	left:60%
.noresult
	width:100%
	height:50px	
