.section--search
  background: #000

  &:after
    content: ''
    background: url(../img/pattern.png)
    position: absolute
    width: 100%
    height: 100%
    pointer-events: none
    top: 0
    left: 0
    z-index: 1

.section--search__background
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100%
  background: url(../img/bg.jpg) no-repeat center center
  background-size: cover
  z-index: 0
  opacity: .6

.section--search__report-btn
  position: fixed
  transform: translate3d(0, 0, 0)
  right: 20px
  top: 20px
  background: #FA5A5A
  color: #FFF
  padding: 10px
  border-bottom: 5px rgba(0, 0, 0, .21) solid
  letter-spacing: 2px
  cursor: pointer
  opacity: .8
  z-index: 3

  &:hover
    margin-top: 1px
    border-bottom-width: 4px
  
  &:active
    background-color: #ff4c4b
    margin-top: 4px
    border-bottom-width: 1px

.section--search__container
  position: absolute
  width: 600px
  height: 300px
  left: 50%
  top: 50%
  transform: translate3d(-300px, -150px, 0)
  z-index: 3
  text-align: center

.section--search__title
  font-family: 'Poiret One', cursive
  color: #FFF
  font-weight: bold
  font-size: 3.6em
  letter-spacing: 2px
  border-bottom: 1px rgba(255, 255, 255, .5) solid
  display: inline-block
  line-height: 1.2em
  margin-bottom: 10px
  text-shadow: 1px 0 1px #40E0D0, -1px 0 1px #CD5C5C

.section--search__subtitle
  color: #FFF
  opacity: .6
  letter-spacing: 5.5px

.section--search__form
  width: 250px
  margin-top: 40px
  position: relative
  left: 50%
  height: 40px
  transform: translate3d(-125px, 0, 0)

.section--search__form__input
  position: absolute
  left: 0
  top: 0
  background: rgba(255, 255, 255, .5)
  color: #000
  font-size: 14px
  letter-spacing: 1px
  border: none
  border-bottom: 2px rgba(255, 255, 255, .4) solid
  width: 200px
  box-sizing: border-box
  padding: 0 10px
  height: 40px

  &::placeholder
    color: #333

.section--search__form__submit-btn
  position: absolute
  right: 0
  top: 0
  font-size: 14px
  letter-spacing: 1px
  background: #FA5A5A
  border: none
  color: #FFF
  border-bottom: 2px rgba(0, 0, 0, .21) solid
  box-sizing: border-box
  height: 40px
  width: 50px
  text-align: center
  opacity: .8

.section--search__info__btn
  position: absolute
  transform: translate3d(0, 0, 0)
  background: #FA5A5A
  color: #FFF
  padding: 3px 10px
  border-bottom: 5px rgba(0, 0, 0, .21) solid
  letter-spacing: 2px
  cursor: pointer
  opacity: .8
  text-decoration:none
  right:10px
  bottom:10px

  &:hover
    margin-top: 1px
    border-bottom-width: 4px
  
  &:active
    background-color: #ff4c4b
    margin-top: 4px
    border-bottom-width: 1px

    
