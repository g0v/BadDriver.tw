.section--description
  min-height: 300px
  max-height: 300px
  background: #000
  line-height: 300px
  text-align: center
  color: #FFF
  font-size: 18px

.section--description__background
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100%
  background: url(../img/bg.jpg) no-repeat center center
  background-size: cover
  opacity: .5

  &:after
    content: ''
    background: url(../img/pattern.png)
    position: absolute
    width: 100%
    height: 100%
    pointer-events: none
    top: 0
    left: 0
    z-index: 1

.section--description__message
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100%
  z-index: 2
  letter-spacing: 2px
