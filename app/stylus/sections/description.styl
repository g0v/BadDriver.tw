.section--description
  min-height: 300px
  max-height: 300px
  background: #000

.section--description__background
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100%
  background: url(../img/bg.jpg) no-repeat center center
  background-size: cover
  opacity: .5

  &:after
    content: ''
    background: url(../img/pattern.png)
    position: absolute
    width: 100%
    height: 100%
    pointer-events: none
    top: 0
    left: 0
    z-index: 1
