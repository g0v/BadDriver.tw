.section--video-list
  background: #000
  color: #CCC
  min-height: 350px
  max-height: 350px

.section--video-list__content
  width: $container-width
  margin: 0 auto

.section--video-list__list
  width: ($container-width + 60)
  margin-left: -30px
  height: 350px

.section--video-list__item
  float: left
  width: ($container-width / 3 - 60)
  margin-left: 60px
  background: url(../img/pattern.png), rgba(255, 255, 255, .2)
  box-sizing: border-box
  padding: 10px
  line-height: 30px
  letter-spacing: 2px
