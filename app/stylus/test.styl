.footer
  height:210px;
  width:100%;
  margin-top: -210px;
  position:relative;

  .wrap
    width:970px;
    padding:24px 0 0 0;

    .logoBK
      width:227px;
      float:left;
      margin-right: 20px;

      a
        width:209px;
        height:12px;
        padding-top:32px;
        display:block;

    .aboutUs
      width:380px;
      float:left;

      ul
        float:left;
        padding-right:25px;

    .ad-buy
      float:right;
      width:318px;
      height:96px;
      padding:12px;

      .pic
        width:135px;
        height:96px;
        overflow:hidden;

        img
          width:135px;

      .info
        width:175px;
        float:right;

        h6
          padding:0;
          font-size:17px;
          height:20px;
          overflow:hidden;

        p
          line-height:16px;
          margin:5px 0 0 0;

        .buy-btn

