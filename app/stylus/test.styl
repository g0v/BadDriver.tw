  min-height: 100%;
  padding-bottom: 210px;
  position:relative;

  .header 
    width:100%;
    height:60px;
    position:fixed;
    z-index:100;
    text-align:center;
 
    .wrap
      display:inline-block;
      max-width:1200px;

      .nav.left
        li
          float:left;
          height:60px;
          line-height:60px;
          padding:0 18px;
          display:block;  

          a
            display:block;
        .logo
          margin:0;
          padding:0;
          width:176px;

        .choose
        .preorder
        .gobuy
          height:55px;

        .work
          padding-left:42px;

      .nav.right
        li
          float:left;
          height:60px;
          line-height:60px;
          padding:0 13px;

        .cart
          padding-left:37px;
          position:relative;


  .slider
    width:12px;
    height:700px;
    position:fixed;
    top:67px;
    left:214px;

    ul
      display:block;
      position:absolute;
      width:12px;
      top:50%;
      margin-top:-52.2px;

      a
        width:10px;
        height:10px;
        display:block;
      

.contentBK.index
